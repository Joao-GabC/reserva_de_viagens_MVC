@model AgenciaDeViagens.ViewModel.LoginViewModel
@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>
<h4>Use uma conta local para fazer login.</h4>
<hr />

<div class="container mt-4 mb-3">
    <section class="row w-100 justify-content-center">
        <div class="border border-1 col-6 pb-3 shadow px-3">
            <form asp-action="Login" method="post">
                <div class="mb-2 mt-3">
                    <label asp-for="Email"></label><br />
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" style="color: red;"></span>
                </div>
                <br />
                <div>
                    <label asp-for="Password"></label><br />
                    <input asp-for="Password" class="form-control"  />
                    <span asp-validation-for="Password" style="color: red;"></span>
                </div>
                <br />
                <div class="mb-4">
                    <label>
                        <input asp-for="RememberMe" />
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
                <br />
                <div class="d-flex">
                    <button type="submit" class="btn btn-success me-3">Log in</button>
                    <a asp-controller="Account" asp-action="ForgotPassword" class="btn btn-primary">Esqueceu sua senha?</a>
                </div>
            </form>
        </div>
    </section>
</div>
