@model AgenciaDeViagens.ViewModel.ReservarViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="container justify-content-center">
    <h1>Pacotes</h1>
    <hr />

    <form>
        <div class="row w-50">
            <div class="col">
			    <input asp-for="DataInicial" min="@DateTime.Today.ToString("yyyy-MM-dd")" value="@DateTime.Today.ToString("yyyy-MM-dd")" type="date" />
            </div>
            <div class="col">
                <input asp-for="DataFinal" min="@DateTime.Today.ToString("yyyy-MM-dd")" value="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")" type="date" />
            </div>
        </div>
        <div class="row w-50">
            <button class="btn btn-success" type="submit">Verificar disponibilidade</button>
        </div>
    </form>
    <div class="row" id="pacotes">
        @foreach (var item in Model.Pacotes)
        {
            <div class="card my-2 p-0 mx-2">
                <img src="@item.ImagemUrl" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">@item.Titulo</h5>
                    <p class="card-text">@item.Descricao</p>
                    <hr />
                    <div class="d-flex justify-content-between text-center">
                        <p class="card-text text-success my-auto"><span class="text-success h5">R$@item.PrecoPorNoite</span> por noite</p>
						<a asp-controller="Home" asp-action="Pacote" asp-route-id="@item.Id" class="btn btn-success">Agendar Reserva</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>